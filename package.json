{
  "name": "tipalph",
  "version": "1.1.9",
  "description": "A tipping bot for the Alephium Blockchain",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node --es-module-specifier-resolution=node build/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch --clear-screen=false src/index.ts",
    "clean": "rm -r build 2> /dev/null",
    "lint": "eslint . --ext .ts",
    "test": "jest -i --forceExit --detectOpenHandles",
    "package": "docker build -t tipalph ."
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=10.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/notrustverify/TipAlph.git"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/notrustverify/TipAlph/issues"
  },
  "homepage": "https://github.com/notrustverify/TipAlph#readme",
  "devDependencies": {
    "@alephium/web3-test": "^0.30.1",
    "@babel/preset-env": "^7.23.9",
    "@grammyjs/types": "^3.3.0",
    "@telegraf/types": "^6.9.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard-with-typescript": "^42.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@alephium/cli": "^0.30.1",
    "@alephium/web3": "^0.30.1",
    "@alephium/web3-wallet": "^0.30.1",
    "async-mutex": "^0.4.1",
    "bip39": "^3.1.0",
    "dotenv": "^16.4.3",
    "reflect-metadata": "^0.1.14",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.15.3",
    "typeorm": "^0.3.20"
  }
}
